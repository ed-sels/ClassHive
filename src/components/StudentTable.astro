---
import students from "../data/students.json";

function getBadgeClasses(fees: string) {
  return fees === "Paid"
    ? "bg-green-100 text-green-700"
    : "bg-red-100 text-red-700";
}
---

<div class="overflow-x-auto mt-8 bg-white rounded-xl shadow-md">
  <table class="min-w-full text-left border-collapse">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-6 py-3 font-semibold text-gray-700">Name</th>
        <th class="px-6 py-3 font-semibold text-gray-700">Class</th>
        <th class="px-6 py-3 font-semibold text-gray-700">Attendance</th>
        <th class="px-6 py-3 font-semibold text-gray-700">Grade</th>
        <th class="px-6 py-3 font-semibold text-gray-700">Fees</th>
      </tr>
    </thead>
    <tbody>
      {students.map((s) => (
        <tr class="border-b hover:bg-gray-50">
          <td class="px-6 py-3">{s.name}</td>
          <td class="px-6 py-3">{s.class}</td>
          <td class="px-6 py-3">{s.attendance}%</td>
          <td class="px-6 py-3">{s.grade}</td>
          <td class="px-6 py-3">
            <span class={`px-3 py-1 rounded-full text-sm ${getBadgeClasses(s.fees)}`}>
              {s.fees}
            </span>
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
