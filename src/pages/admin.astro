---
import Sidebar from "../components/Sidebar.astro";
import Navbar from "../components/Navbar2.astro";
import StudentTable from "../components/StudentTable.astro";
import students from "../data/students.json";

const totalStudents = students.length;
const averageAttendance = Math.round(
  students.reduce((sum, s) => sum + s.attendance, 0) / totalStudents
);
const totalFees = 45200; // placeholder value
const pendingFees = students.filter((s) => s.fees === "Pending").length * 500;
---

<html lang="en">
  <head>
    <title>Admin Dashboard | ClassHive</title>
  </head>
  <body class="bg-gray-50 font-sans">
    <Sidebar />
    <Navbar />

    <main class="md:ml-64 mt-16 p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Overview</h2>

      <!-- Summary cards -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <h3 class="text-gray-500 text-sm">Total Students</h3>
          <p class="text-3xl font-semibold text-gray-800 mt-2">{totalStudents}</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <h3 class="text-gray-500 text-sm">Average Attendance</h3>
          <p class="text-3xl font-semibold text-gray-800 mt-2">{averageAttendance}%</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <h3 class="text-gray-500 text-sm">Fees Collected</h3>
          <p class="text-3xl font-semibold text-green-600 mt-2">${totalFees}</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <h3 class="text-gray-500 text-sm">Pending Payments</h3>
          <p class="text-3xl font-semibold text-red-600 mt-2">${pendingFees}</p>
        </div>
      </div>

      <!-- Student Table -->
      <StudentTable />
    </main>
  </body>
</html>
